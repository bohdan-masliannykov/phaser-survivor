{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@scenes/*": [
        "src/game/scenes/*"
      ],
      "@entities/*": [
        "src/game/entities/*"
      ],
      "@system/*": [
        "src/game/system/*"
      ],
      "@utils/*": [
        "src/game/utils/*"
      ],
      "@constants": [
        "src/game/constants.ts"
      ],
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
}